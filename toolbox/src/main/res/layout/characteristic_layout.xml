<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:background="?attr/selectableItemBackground"
                android:id="@+id/parentLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="6dp"
                android:paddingEnd="@dimen/tiny"
                android:paddingTop="@dimen/small"
                android:paddingBottom="@dimen/small" >

    <RelativeLayout
        android:id="@+id/characteristicLayout"
        android:layout_marginLeft="@dimen/small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/expandArrow" >

        <TextView
            android:id="@+id/characteristicName"
            style="@style/item_title"
            android:text="Custom Characteristic" />

        <TextView
            android:id="@+id/detailsHeading"
            style="@style/item_heading"
            android:layout_alignStart="@+id/characteristicName"
            android:layout_below="@+id/characteristicName"
            android:text="Details"/>

        <TextView
            android:id="@+id/uuidLabel"
            style="@style/item_text"
            android:layout_alignStart="@+id/characteristicName"
            android:layout_below="@+id/detailsHeading"
            android:text="UUID: "/>

        <TextView
            android:id="@+id/uuid"
            style="@style/item_text"
            android:layout_alignTop="@id/uuidLabel"
            android:layout_toEndOf="@+id/uuidLabel"
            android:text="0x2902"/>

        <TextView
            android:id="@+id/propLabel"
            style="@style/item_text"
            android:layout_alignStart="@+id/characteristicName"
            android:layout_below="@+id/uuidLabel"
            android:text="Properties: "/>

        <TextView
            android:id="@+id/properties"
            style="@style/item_text"
            android:layout_alignTop="@id/propLabel"
            android:layout_toEndOf="@+id/propLabel"
            android:text="Read"/>

        <TextView
            android:id="@+id/valueDisplayTypeLabel"
            style="@style/item_heading"
            android:layout_alignStart="@+id/characteristicName"
            android:layout_below="@+id/propLabel"
            android:text="Integer" />

        <EditText
            android:id="@+id/value"
            style="@style/AppTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/characteristicName"
            android:layout_below="@+id/valueDisplayTypeLabel"
            android:text="Read"
            android:background="@color/transparent"/>

        <ImageView
            android:id="@+id/fakeOverflowMenu"
            android:background="?attr/selectableItemBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_more_vert_black_24dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            android:padding="5dp" />

        <View
            android:id="@+id/fakeOverflowMenuAnchor"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:visibility="invisible"
            android:background="@color/red"
            android:layout_alignTop="@id/fakeOverflowMenu"
            android:layout_alignRight="@id/fakeOverflowMenu"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/expandArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_expand_more_black_24dp"
        android:layout_centerVertical="true"/>

</RelativeLayout>